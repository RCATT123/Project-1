<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/welcome_background"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/register_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/registration_screen_title"
        android:textAllCaps="true"
        android:textColor="@color/title_white_text_color"
        android:textSize="22sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/register_part_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical"
                tools:visibility="gone">

                <EditText
                    android:id="@+id/registration_name"
                    style="@style/LoginEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:hint="@string/name_hint"
                    android:inputType="textPersonName"
                    android:textColor="@color/general_text_color" />

                <EditText
                    android:id="@+id/registration_username"
                    style="@style/LoginEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:hint="@string/username_hint"
                    android:inputType="textPersonName"
                    android:textColor="@color/general_text_color" />

                <EditText
                    android:id="@+id/registration_email"
                    style="@style/LoginEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:hint="@string/registration_email_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/general_text_color" />

                <EditText
                    android:id="@+id/registration_password"
                    style="@style/LoginEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/general_text_color" />

                <EditText
                    android:id="@+id/registration_confirm_password"
                    style="@style/LoginEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:hint="@string/confirm_password_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/general_text_color" />

                <Button
                    android:id="@+id/registration_continue_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/background"
                    android:text="@string/continue_button_text"
                    android:textColor="@color/title_white_text_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_part_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/register_date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/form_picker_selector"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:text="@string/date_of_birth_hint"
                    android:textColor="@color/general_text_color" />

                <TextView
                    android:id="@+id/register_gender_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/form_picker_selector"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:text="@string/gender_hint"
                    android:textColor="@color/general_text_color" />

                <TextView
                    android:id="@+id/register_user_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/form_picker_selector"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:text="@string/user_type_hint"
                    android:textColor="@color/general_text_color" />

                <Button
                    android:id="@+id/register_submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/background"
                    android:text="@string/complete_registration_button_text"
                    android:textColor="@color/title_white_text_color" />
            </LinearLayout>

        </FrameLayout>

    </ScrollView>

</LinearLayout>