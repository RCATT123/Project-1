<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/address_dialog_town_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Town"
        android:textColor="@color/general_text_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/address_dialog_town"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/town_of_match"
        android:textColor="@color/general_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/address_dialog_venue_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue"
        android:textColor="@color/general_text_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/address_dialog_venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/venue_of_match"
        android:textColor="@color/general_text_color"
        android:textSize="20sp" />

</LinearLayout>