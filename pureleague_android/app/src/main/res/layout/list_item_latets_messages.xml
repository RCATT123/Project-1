<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/sub_color_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_latest_messages_status"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/readded_message_icon" />

        <TextView
            android:id="@+id/list_item_latest_messages_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/general_text_color"
            android:textSize="12sp"
            tools:text="John" />

        <TextView
            android:id="@+id/list_item_latest_messages_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical|end"
            android:text="Yesterday - 15:30"
            android:textColor="@color/sub_color_2"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/readded_message_icon" />

        <TextView
            android:id="@+id/list_item_latest_messages_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:text="Are You sure?"
            android:textColor="@color/general_text_color"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>