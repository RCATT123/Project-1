<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/contact_us_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/contact_tab_title"
            android:lines="1"
            android:textAllCaps="true"
            android:textColor="@color/title_white_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/contact_us_name"
                style="@style/ContactUsEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="@string/contact_us_name_hint"
                android:inputType="textPersonName"
                android:textColor="@color/sub_color_1" />

            <EditText
                android:id="@+id/contact_us_reason_edit_text"
                style="@style/ContactUsEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="@string/contact_us_reason_hint"
                android:inputType="textPersonName"
                android:textColor="@color/sub_color_1" />

            <EditText
                android:id="@+id/contact_us_phone"
                style="@style/ContactUsEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="@string/contact_us_phone_hint"
                android:inputType="phone"
                android:textColor="@color/sub_color_1" />

            <EditText
                android:id="@+id/contact_us_email"
                style="@style/ContactUsEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="@string/contact_us_email_hint"
                android:inputType="textEmailAddress"
                android:textColor="@color/sub_color_1" />

            <EditText
                android:id="@+id/contact_us_message"
                style="@style/ContactUsEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/contact_us_message_hint"
                android:minLines="6"
                android:textColor="@color/sub_color_1" />

            <Button
                android:id="@+id/contact_us_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/background"
                android:text="@string/submit_button_text"
                android:textColor="@color/title_white_text_color" />

        </LinearLayout>

        <include layout="@layout/footer_layout"/>

    </LinearLayout>

</ScrollView>