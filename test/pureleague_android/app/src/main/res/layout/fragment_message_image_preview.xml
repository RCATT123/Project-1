<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/messages_dialog_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            tools:src="@drawable/calendar_next_arrow"/>

        <ImageView
            android:id="@+id/messages_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:paddingLeft="18dp"
            android:paddingStart="18dp"
            android:layout_alignTop="@id/messages_dialog_image"
            android:layout_alignRight="@id/messages_dialog_image"
            app:srcCompat="@drawable/gallery_preview_cancel" />
    </RelativeLayout>
</RelativeLayout>