<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_statistics_number"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/tables_items_text_size"
            tools:text="23" />

        <TextView
            android:id="@+id/list_item_statistics_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:textSize="@dimen/tables_items_text_size"
            tools:text="Harchester Uniteda" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/sub_color_4" />

        <TextView
            android:id="@+id/list_item_statistics_goals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/icon_background"
            android:gravity="center"
            android:textSize="@dimen/tables_items_text_size"
            tools:text="78" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sub_color_4" />

</LinearLayout>