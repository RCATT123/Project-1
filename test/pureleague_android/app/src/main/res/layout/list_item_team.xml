<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/team_list_item_colour"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/team_color_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/team_list_item_club"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Harchester United"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/general_text_color" />

        <TextView
            android:id="@+id/team_list_item_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Division 1"
            android:textColor="@color/sub_color_1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/team_list_item_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/edit_team_button"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_settings" />
</LinearLayout>